{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", 
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}